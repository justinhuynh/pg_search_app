<h2>Articles</h2>

<%= render 'search' %>

<h3 id="articles-top">List of Articles | <%= link_to "Add New Article", "#add-new-article" %></h3>

<h4>Showing <%= @articles.count %> results</h4>

<div class="row">
  <div class="columns small-12">
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Comments</th>
      </tr>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article_path(article) %></td>
          <td><%= article.body %></td>
          <td>
            <ul>
              <% article.comments.each do |comment| %>
                <li><%= comment.body %></li>
              <% end %>
            </ul>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<h3 id="add-new-article">Add New Article | <%= link_to "Back To Top", "#articles-top" %></h3>
<%= render "form" %>
